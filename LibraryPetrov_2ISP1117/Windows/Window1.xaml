                           Grid.Row="1"
                           Grid.Column="2"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="1"
                           Grid.Row="3"
                           Grid.Column="2"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="Адрес"
                           Grid.Row="0"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           Margin="0 0 10 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="Телефон"
                           Grid.Row="1"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           Margin="0 0 10 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="Email"
                           Grid.Row="3"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           Margin="0 0 10 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="1"
                           Grid.Row="0"
                           Grid.Column="4"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
