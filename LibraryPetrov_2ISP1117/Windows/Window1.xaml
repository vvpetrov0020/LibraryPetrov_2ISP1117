                           Grid.Row="1"
                           Grid.Column="4"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>
                <TextBlock Text="1"
                           Grid.Row="2"
                           Grid.Column="4"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           FontSize="20"
                           Foreground="DarkOliveGreen"/>

            </Grid>
        </Border>
    </Grid>
</Window>
